	author = {Groh, J. H. and Ekstr{\"o}m, S. and Georgy, C. and Meynet, G. and Choplin, A. and Eggenberger, P. and Hirschi, R. and Maeder, A. and Murphy, L. J. and Boian, I. and Farrell, E. J.},
