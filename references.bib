	note = {ADS Bibcode: 2009PASP..121..591M},
	keywords = {Astrophysics - Galaxy Astrophysics},
	pages = {591},
	file = {Accepted Version:/Users/karansinghd/Zotero/storage/63VW23KT/Mauerhan et al. - 2009 - 12 New Galactic Wolf-Rayet Stars Identified via 2M.pdf:application/pdf},
}

