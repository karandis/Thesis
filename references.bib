@article{shara_near-infrared_2012,
	title = {A {Near}-infrared {Survey} of the {Inner} {Galactic} {Plane} for {Wolf}-{Rayet} {Stars}. {II}. {Going} {Fainter}: 71 {More} {New} {W}-{R} {Stars}},
